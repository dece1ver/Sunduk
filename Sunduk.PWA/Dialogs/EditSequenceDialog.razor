@inject IDialogService DialogService

<MudDialog>
    <DialogContent>
        <MudGrid Class="mt-2">
            @switch (sequence)
            {
                case FacingSequence facingSequence:
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Общий припуск" @bind-Value="facingSequence.RoughStockAllow" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Съем" @bind-Value="facingSequence.StepOver" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Чистовой припуск по Z" @bind-Value="facingSequence.ProfStockAllow" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    break;
                case RoughFacingSequence roughFacingSequence:
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Общий припуск" @bind-Value="roughFacingSequence.RoughStockAllow" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Съем" @bind-Value="roughFacingSequence.StepOver" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Чистовой припуск по Z" @bind-Value="roughFacingSequence.ProfStockAllow" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    break;
                case FinishFacingSequence finishFacingSequence:
                    <MudItem xs="12">
                        <MudTextField Label="Чистовой припуск по Z" @bind-Value="finishFacingSequence.ProfStockAllow" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    break;
                case HighSpeedDrillingSequence highSpeedDrillingSequence:
                    <MudItem xs="12" sm="6">
                        <MudTextField Label="Начальная точка" @bind-Value="highSpeedDrillingSequence.StartZ" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudTextField Label="Конечная точка" @bind-Value="highSpeedDrillingSequence.EndZ" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    break;
                case PeckDrillingSequence peckDrillingSequence:
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Глубина" @bind-Value="peckDrillingSequence.Depth" Adornment="Adornment.End" AdornmentText="мм" Immediate="true" />
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Начальная точка" @bind-Value="peckDrillingSequence.StartZ" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    <MudItem xs="12" sm="4">
                        <MudTextField Label="Конечная точка" @bind-Value="peckDrillingSequence.EndZ" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    break;
                case PeckDeepDrillingSequence peckDeepDrillingSequence:
                    <MudItem xs="4">
                        <MudTextField Label="Глубина" @bind-Value="peckDeepDrillingSequence.Depth" Adornment="Adornment.End" AdornmentText="мм" Immediate="true" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudTextField Label="Начальная точка" @bind-Value="peckDeepDrillingSequence.StartZ" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    <MudItem xs="4">
                        <MudTextField Label="Конечная точка" @bind-Value="peckDeepDrillingSequence.EndZ" Immediate="true" Converter="Util.DoubleConverter" />
                    </MudItem>
                    break;
                default:
                    break;
            }
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public List<Tool> Tools { get; set; }
    [Parameter] public List<Sequence> Program { get; set; }
    [Parameter] public Sequence sequence { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}