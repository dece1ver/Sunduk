@page "/knowledge/{article}"
@using Sunduk.PWA.Components.Knowledge;


<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-3">
    <MudGrid>
        <MudItem xs=12 sm=6 md=4>
            <MudField Variant="Variant.Filled" DisableUnderLine="true" Label="Содержание">
                <MudList Clickable="true" @bind-SelectedItem="selectedItem" @bind-SelectedValue="Article">
                    <MudListItem Icon="@Icons.Material.Filled.Info" Text="О разделе" Value="@("about")"/>
                    <MudListItem Icon="@Icons.Material.Filled.Folder" Text="Программирование" InitiallyExpanded="true">
                        <NestedList>
                            <MudListItem Icon="@Icons.Material.Filled.Info" Value="@("general-programming")">
                                Общая информация
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Info">
                                Заглушка
                            </MudListItem>
                        </NestedList>
                    </MudListItem>
                </MudList>
            </MudField>
        </MudItem>
        <MudItem xs=12 sm=6 md=8>
            <MudField Variant="Variant.Filled" DisableUnderLine="true" Label="Информация" Class="px-0">
                @switch (Article?.ToString())
            {
                case "about": <AboutKnowledgeComponent/> break;
                case "general-programming": <GeneralPrograming/> break;
            }
            </MudField>
        </MudItem>
    </MudGrid>
</MudContainer>


@code 
{
    [Parameter]
    public string Article { get; set; } = "about";
    MudListItem selectedItem;
}
