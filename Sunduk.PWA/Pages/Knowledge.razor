@page "/knowledge/{article}"
@using Sunduk.PWA.Components.Knowledge;


<MudContainer MaxWidth=MaxWidth.False Class="mt-2">
    <MudGrid Spacing=1>
        <MudItem xs=12 sm=5 md=4 >
            <MudField Variant="Variant.Filled" DisableUnderLine="true" Label="Содержание" InnerPadding="false">
                <MudList Clickable="true" @bind-SelectedItem="selectedItem" @bind-SelectedValue="Article">
                    <MudListItem Icon="@Icons.Material.Filled.Info" Text="О разделе" Value="@("about")"/>
                    <MudListItem Icon="@Icons.Material.Filled.Folder" Text="Программирование">
                        <NestedList>
                            <MudListItem Icon="@Icons.Material.Filled.Info" Value="@("general-programming")">
                                Общая информация
                            </MudListItem>
                            <MudListItem Icon="@Icons.Material.Filled.Info">
                                Заглушка
                            </MudListItem>
                        </NestedList>
                    </MudListItem>
                </MudList>
            </MudField>
        </MudItem>
        <MudItem xs=12 sm=7 md=8>
            <MudField Variant="Variant.Filled" DisableUnderLine="true" Label="Информация">
                @switch (Article?.ToString())
            {
                case "about": <AboutKnowledgeComponent/> break;
                case "general-programming": <GeneralPrograming/> break;
            }
            </MudField>
        </MudItem>
    </MudGrid>
</MudContainer>


@code 
{
    [Parameter]
    public object Article { get; set; } = "about";
    MudListItem selectedItem;
}
