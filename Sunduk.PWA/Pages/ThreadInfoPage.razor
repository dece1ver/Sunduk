            {
                return ((ThreadDiameter ?? 0) + 2).ToString("N1").Replace(",",".").Replace(".0",".");
            }
            else if (ValidThreading() && (ThreadType == Type.Internal))
            {
                return ((ThreadDiameter ?? 0) - RealThreadPitch - 1).ToString("N1").Replace(",", ".").Replace(".0", ".");
            }
            else
            {
                return string.Empty;
            }
        } }
    public string ThreadProfile { get => ThreadStandart == Standart.Metric ? "60" : "55"; }
    public string EndDiameter { get => ThreadType == Type.External ? ((ThreadDiameter ?? 0) - (2 * Passes.Sum())).ToString("N3").Replace(",", ".").Trim('0') : (ThreadDiameter ?? 0).ToString("N3").Replace(",",".").Trim('0') ; }

    private void OnStandartChanged(Standart value)
    {
        if (ThreadStandart != value)
        {
            ThreadStandart = value;
            ThreadPitch = 0;
        }
    }

    private bool ValidThreading()
    {
        if (ThreadDiameter != null && ThreadDiameter != 0 && ThreadPitch != 0)
        {
