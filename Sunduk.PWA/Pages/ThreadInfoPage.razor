            {
                double result = Math.Atan(RealThreadPitch / ((ThreadDiameter ?? 0) * Math.PI));
                result = result / Math.PI * 180;
                return result;
            }
            else
            {
                return 0;
            }
        } }

    public string ApproachDiameter { get
