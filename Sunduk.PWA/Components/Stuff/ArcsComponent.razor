<MudSwipeArea OnSwipeEnd="@(e => OnSwipe(e.SwipeDirection))">
    <MudTabs Elevation="2" @ref="tabs" Style="font-size: small">
        <MudTabPanel Text="Скругление">
            <RadiusComponent />
        </MudTabPanel>
        <MudTabPanel Text="@("\"Ниппель\"")">
            <NippleComponent />
        </MudTabPanel>
        <MudTabPanel Text="@("\"Затвор\"")">
            <Arc2Component />
        </MudTabPanel>
    </MudTabs>
</MudSwipeArea>

@code
{
    MudTabs tabs;

    private void OnSwipe(SwipeDirection direction)
    {
        if (direction == SwipeDirection.LeftToRight)
        {
            if (tabs.ActivePanelIndex > 0)
            {
                tabs.ActivatePanel(tabs.ActivePanelIndex - 1);
            }
        }
        else if (direction == SwipeDirection.RightToLeft)
        {
            if (tabs.ActivePanelIndex < 2)
            {
                tabs.ActivatePanel(tabs.ActivePanelIndex + 1);
            }
        }
    }
}

