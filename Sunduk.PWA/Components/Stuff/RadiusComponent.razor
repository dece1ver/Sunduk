    private void OnRadiusTypeChanged(Radius value)
    {
        RadiusType = value;
        if (RadiusType == Radius.External) CurrentImage = Images.ExternalRadius;
        if (RadiusType == Radius.Internal) CurrentImage = Images.InternalRadius;
    }

